# This is an example .env file for the Risk Assessment Tool. Copy this file to .env and replace the placeholder values with your actual configuration.
ANTHROPIC_API_KEY=sk-ant-your-key-here # This is for production use. For development, use a separate key.
GOOGLE_API_KEY=your-google-api-key-here # Replace with your actual Google API key.


# Risk Scoring Configuration
DEFAULT_RISK_THRESHOLD=7
RISK_WEIGHT_LIKELIHOOD=0.4
RISK_WEIGHT_IMPACT=0.6

# Output Configuration
OUTPUT_FORMAT=markdown
VERBOSE=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log   

